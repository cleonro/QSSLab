{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Debug (../build_Debug)",
      "description": "Configure a Debug build outside the source at ../build_Debug",
      "binaryDir": "${sourceDir}/../build_Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_GENERATOR": "Ninja"
      }
    },
    {
      "name": "release",
      "displayName": "Release (../build_Release)",
      "description": "Configure a Release build outside the source at ../build_Release",
      "binaryDir": "${sourceDir}/../build_Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_GENERATOR": "Ninja"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "release",
      "configurePreset": "release"
    }
  ]
}
